@using GMS.Utility
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccesor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] GMS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.16/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css" />

</head>
<body id="body-pd" class="search-background">
    <header class="header mb-5" id="header">
        <div class="header_toggle"> <i class='bx bx-menu' id="header-toggle"></i> </div>
       
           <partial name="_LoginPartial" />
    </header>

    <!--Sidebar menu-->
    <div class="l-navbar" id="nav-bar">
        <nav class="nav">
            <div>
                <a href="#" class="nav_logo"> <img src="~/favicon.ico" width="30px" height="30px" /><span class="nav_logo-name"></span> </a>
                <div class="nav_list">
                    <a href="/" class="nav_link active">
                        <i class='bx bx-grid-alt nav_icon'></i>
                        <span class="nav_name ">Dashboard</span>
                    </a>

                  

                    @if (User.IsInRole(SD.Admin))
                    {

                       
                        <a class="nav_link" asp-area="Admin" asp-controller="Shift" asp-action="Index" title="Shift"> <img src="~/images/menu-icons/Period.png" width="30px" height="30px" /> <span class="nav_name">Shifts</span> </a>
                        <a class="nav_link" asp-area="Admin" asp-controller="Period" asp-action="Index" title="Period"> <img src="~/images/menu-icons/Shift.png" width="30px" height="30px" /> <span class="nav_name">Periods</span> </a>
                        <a class="nav_link" asp-area="Admin" asp-controller="Membership" asp-action="Index" title="Membership"> <img src="~/images/menu-icons/Membership.png" width="30px" height="30px" /> <span class="nav_name">Memberships</span> </a>
                        <a class="nav_link" asp-area="Admin" asp-controller="Equipment" asp-action="Index" title="Equipment"> <img src="~/images/menu-icons/Equipment.png" width="30px" height="30px" /> <span class="nav_name">Equipments</span> </a>
                        <a class="nav_link" asp-area="Admin" asp-controller="Client" asp-action="Index" title="Member"> <img src="~/images/menu-icons/Member.png" width="30px" height="30px" /> <span class="nav_name">Members</span> </a>
                        <a class="nav_link" asp-area="Admin" asp-controller="Trainer" asp-action="Index" title="Trainer"> <img src="~/images/menu-icons/Trainer.png" width="30px" height="30px" /> <span class="nav_name">Trainer</span> </a>
                        <a class="nav_link" asp-area="Admin" asp-controller="User" asp-action="Index" title="Users"> <img src="~/images/menu-icons/Users.png" width="30px" height="30px" /> <span class="nav_name">Users</span> </a>
                    }

                </div>
            </div>

        </nav>
    </div>
    <!--End Sidebar menu-->
    <div class="container my-3" style="padding-top: 2em; padding-bottom: 2em;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container text-white">
          <b>  &copy; 2021 - Gym Management System</b>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery.serializeJSON/2.9.0/jquery.serializejson.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js"></script>
    <script src="https://kit.fontawesome.com/e19c476714.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"></script>


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
