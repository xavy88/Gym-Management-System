@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="login-form pt-4">
    <form id="account" method="post">
        <img src="~/images/Login.png" style="padding-left:2em;"/>
        <h2 class="text-center text-primary"><b>Log in</b></h2>
        <div class="form-group">
            <input asp-for="Input.Email" placeholder="Email..." class="form-control" autofocus />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="Input.Password" placeholder="Password" class="form-control" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block">Log in</button>
        </div>
        
    </form>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
